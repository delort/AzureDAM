@model IEnumerable<Avanade.AzureDAM.Models.AssetSearchResult>

@{
    ViewBag.Title = "Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />

@using (Html.BeginForm("Find", "Search", FormMethod.Get))
{
    @Html.AntiForgeryToken();

    <div class="form-horizontal">
        <div class="form-group">
            <div class="input-group col-md-offset-4 col-md-4">
                <input type="text" class="form-control" name="searchCriteria" value="@(Request.QueryString["searchCriteria"])">
                <span class="input-group-btn">
                    <input type="submit" class="btn btn-primary btn-file" value="Find">
                </span>
            </div>
        </div>
    </div>
}
    <h2>Results</h2>

    <!--TODO: Add the ability to go to the details page -->
    <div class="table">

        @foreach (var item in Model)
         {
            <a href="@Url.Action("Details", "Assets", new { id=item.Id })">
                <img src="@Url.Content(item.ThumbnailUrl)" class="searchResult" alt="@item.Name" />
            </a>
        }
        <div class="searchResultBD"></div>
    </div>