@model Avanade.AzureDAM.Models.AssetMetadata

@{
    ViewBag.Title = "Asset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
   <script src="//amp.azure.net/libs/amp/latest/azuremediaplayer.min.js"></script>
}
@section Styles
{
    <link href="//amp.azure.net/libs/amp/latest/skins/amp-default/azuremediaplayer.min.css" rel="stylesheet"/>
}


<h4>@Html.DisplayFor(model => model.Name)</h4>

<div>
    <hr />
    <dl class="dl-horizontal">
    <dt>
    </dt>
    <dd>
        @{
            if (Model.Type == "image")
            {
                <img src="@Url.Content(Model.Url)" class="img.rounded" width="100" height="100" alt="@Model.Description"/>
            }
            else if (Model.Type == "video")
            {

                <video id="vid1" class="azuremediaplayer amp-default-skin" autoplay controls width="640" height="400" poster="poster.jpg" data-setup='{"nativeControlsForTouch": false}'>
                    <source src="http://azuredam.streaming.mediaservices.windows.net/03eb76d2-1680-4b9e-b497-66a0afbcfcf1/BigBuckBunny.ism/Manifest" type="application/vnd.ms-sstr+xml" />
                    <p class="amp-no-js">
                        To view this video please enable JavaScript, and consider upgrading to a web browser that supports HTML5 video
                    </p>
                </video>
            }
        }
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
</div>
